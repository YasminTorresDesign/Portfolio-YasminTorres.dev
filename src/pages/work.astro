---
import { getCollection } from 'astro:content';
import ContactCTA from '../components/ContactCTA.astro';
import Grid from '../components/Grid.astro';
import Hero from '../components/Hero.astro';
import PortfolioPreview from '../components/PortfolioPreview.astro';
import BaseLayout from '../layouts/BaseLayout.astro';

const projects = (await getCollection('work')).sort(
	(a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf(),
);
---

<BaseLayout
	title="Mis Proyectos | YasminTorres.dev"
	description="Proyectos mÃ¡s recientes de YasminTorres.dev"
>
	<div class="stack gap-20"> 
		<main class="wrapper stack gap-8">
			<Hero
				title=" Mis Proyectos"
				tagline="Proyectos que reflejan mi enfoque en crear soluciones funcionales, personalizadas y centradas en la experiencia del usuario"
				align="start"
			/>
			<Grid variant="offset">
				{
					projects.map((project) => (
						<li>
							<PortfolioPreview project={project} />
						</li>
					))
				}
			</Grid>
		</main>
		<ContactCTA />
	</div>
</BaseLayout>
